<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
   
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
	<servlet>
      <servlet-name>FirstServlet</servlet-name>
      <servlet-class>FirstServlet</servlet-class>
    </servlet>

	<servlet>
      <servlet-name>IndexFormServlet</servlet-name>
      <servlet-class>IndexFormServlet</servlet-class>
    </servlet>

	<servlet>
      <servlet-name>LoginFormServlet</servlet-name>
      <servlet-class>LoginFormServlet</servlet-class>
    </servlet>

	<servlet>
      <servlet-name>ServletLifeCycleDemo</servlet-name>
      <servlet-class>ServletLifeCycleDemo</servlet-class>
    </servlet>

	<servlet>
      <servlet-name>Loginvalidater</servlet-name>
      <servlet-class>Loginvalidater</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FirstServlet</servlet-name>
        <url-pattern>/checklogin</url-pattern>
    </servlet-mapping>

	 <servlet-mapping>
        <servlet-name>IndexFormServlet</servlet-name>
        <url-pattern>/start</url-pattern>
    </servlet-mapping>

	<servlet-mapping>
        <servlet-name>LoginFormServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

	<servlet-mapping>
        <servlet-name>ServletLifeCycleDemo</servlet-name>
        <url-pattern>/life</url-pattern>
    </servlet-mapping>

	<servlet-mapping>
        <servlet-name>Loginvalidater</servlet-name>
        <url-pattern>/loginvali</url-pattern>
    </servlet-mapping>

</web-app>